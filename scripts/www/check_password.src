use uo;
use os;
use http;

program check_password ()
	var acctname := QueryParam ("acctname");
	var password := QueryParam ("password");
	
	if (!acctname or !password)
		WriteHTML ("no");
		return;
	endif

	var acct := FindAccount (acctname);
	if (!acct)
		WriteHTML ("no");
		return;
	endif

	if (acct.CheckPassword (password))
		WriteHTML ("yes");
		return;
	endif

	WriteHTML ("no");
endprogram

