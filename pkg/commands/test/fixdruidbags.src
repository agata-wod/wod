use os;
use uo;

include "include/utility";

program textcmd_start( character)
	var itemname := "leadership";
	itemname := Lower (itemname);
	if (!itemname)
		SendSysMessage (character, "No objtype provided!");
		return;
	endif

	set_script_option ( SCRIPTOPT_CAN_ACCESS_OFFLINE_MOBILES, 1 );

	var acct, player;
	var matches := 0;
	foreach acctname in ListAccounts ()
		acct := FindAccount (acctname);
		if (acct)
			for counter := 1 to 7
				player := acct.GetCharacter (counter);
				if (player)					
					foreach item in EnumerateItemsInContainer (player.backpack)
						if (item.objtype == 0x1706b)
							matches := matches + 1;
							FixRuneBag(item);
						endif
					endforeach
				endif
			endfor
					
			var bankbox := FindBankBox (acctname, 1);
			if (bankbox)
				foreach item in EnumerateItemsInContainer (bankbox)
					if (item.objtype == 0x1706b)
						matches := matches + 1;
						FixRuneBag(item);
					endif
				endforeach
			endif
		endif
	endforeach	

	var x, y;
	for (x := 63 ; x < 7168 ; x := x  + 128)
		for( y := 63; y < 4096; y := y + 128 )
			foreach item in ListObjectsInBox (x-63, y-63, -128, x+64, y+64, +127, REALM_BRITANNIA)
				if (item.objtype == 0x1706b)
					matches := matches + 1;
					FixRuneBag(item);
				endif

				if (item.isa (POLCLASS_CONTAINER))
					foreach more_item in EnumerateItemsInContainer (item)
						if (more_item.objtype == 0x1706b)
							matches := matches + 1;
							FixRuneBag(more_item);
						endif
					endforeach
				endif
					
				if (item.isa (POLCLASS_MOBILE))
					foreach more_item in EnumerateItemsInContainer (item.backpack)
						if (more_item.objtype == 0x1706b)
							matches := matches + 1;
							FixRuneBag(more_item);
						endif
					endforeach						
				endif
			endforeach
		endfor
		sleep (1);
	endfor

	SendSysMessage (character, "Found " + matches + " matches");
endprogram

function FixRuneBag (item)
	var runes := GetObjProperty (item, "runes");
	var newrunes := array{};
	foreach rune in runes
		if ( cint(rune) >= 0x7070 and cint(rune) <= 0x707f)
			rune := cint(rune) + 0x10000;
		endif
		newrunes.append(rune);
	endforeach
	SetObjProperty (item, "runes", newrunes);
endfunction
